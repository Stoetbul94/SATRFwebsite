rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Event images - allow authenticated users to read, admins to write
    match /events/{fileName} {
      // Public read access for event images
      allow read: if true;
      
      // Only authenticated admins can upload event images
      // Note: This requires checking Firestore for admin status
      // For now, allow authenticated users (we'll verify admin on backend)
      allow write: if request.auth != null;
    }
    
    // Profile images
    match /profile-images/{userId}_{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Score documents
    match /score-documents/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default deny for all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}








